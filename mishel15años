<body>
  <!-- Fondo principal -->
  <img src="images/FONDOB.png" alt="fondo" id="bg">

  <!-- Sobre cerrado -->
  <div class="centered" id="sobre-cerrado-contenedor">
    <img src="images/sobre cerrado.png" id="sobre-cerrado" alt="Sobre cerrado" draggable="false">
  </div>

  <!-- Sobre abierto (con animación) -->
  <div class="centered" id="sobre-abierto-contenedor">
    <img src="images/cuerpo del sobre.png" class="sobre-base" alt="Cuerpo del sobre" draggable="false">
    <img src="images/page1.png" class="sobre-inv" id="inv-portada" alt="Invitación portada" draggable="false">
    <img src="images/sobre izquierdo.png" class="sobre-pliegue" style="z-index:4;" alt="Sobre izquierdo" draggable="false">
    <img src="images/derecha sobre.png" class="sobre-pliegue" style="z-index:4;" alt="Sobre derecho" draggable="false">
    <img src="images/sobre abajo.png" class="sobre-pliegue" style="z-index:5;" alt="Sobre abajo" draggable="false">
    <img src="images/tapa sobre.png" class="sobre-tapa" id="tapa-sobre" alt="Tapa sobre" draggable="false">
  </div>

  <!-- Flipbook -->
  <div id="flipbook" class="centered">
    <img src="images/page1.png" class="flip-pagina" id="flip-pagina" alt="Página">
    <div class="flip-controls">
      <button id="prevBtn" title="Página anterior">&lt;</button>
      <button id="nextBtn" title="Página siguiente">&gt;</button>
    </div>
  </div>

  <script>
    // Paths de las páginas del flipbook (puedes agregar más si tienes)
    const paginas = [
      "images/page1.png",
      "images/page2.png",
      "images/page3.png",
      "images/page4.png"
    ];
    let paginaActual = 0;

    // Referencias DOM
    const sobreCerradoCont = document.getElementById('sobre-cerrado-contenedor');
    const sobreCerrado = document.getElementById('sobre-cerrado');
    const sobreAbiertoCont = document.getElementById('sobre-abierto-contenedor');
    const tapaSobre = document.getElementById('tapa-sobre');
    const invPortada = document.getElementById('inv-portada');
    const flipbook = document.getElementById('flipbook');
    const flipPagina = document.getElementById('flip-pagina');
    const prevBtn = document.getElementById('prevBtn');
    const nextBtn = document.getElementById('nextBtn');

    // Paso 1: Click en sobre cerrado para mostrar el sobre abierto
    sobreCerrado.onclick = () => {
      sobreCerrado.style.opacity = 0;
      setTimeout(() => {
        sobreCerradoCont.style.display = "none";
        sobreAbiertoCont.style.display = "flex";
      }, 700);
    };

    // Paso 2: Click en tapa para animar apertura y sacar invitación
    tapaSobre.onclick = () => {
      tapaSobre.classList.add('abierta');
      tapaSobre.style.pointerEvents = "none";
      setTimeout(() => {
        invPortada.classList.add('salida');
        // Esperar a que la invitación salga antes de mostrar el flipbook
        setTimeout(() => {
          sobreAbiertoCont.style.display = "none";
          mostrarFlipbook();
        }, 900);
      }, 900);
    };

    // Flipbook funciones
    function mostrarFlipbook() {
      flipbook.style.display = "flex";
      paginaActual = 0;
      mostrarPagina();
    }
    function mostrarPagina() {
      flipPagina.src = paginas[paginaActual];
      prevBtn.style.visibility = (paginaActual === 0) ? "hidden" : "visible";
      nextBtn.style.visibility = (paginaActual === paginas.length - 1) ? "hidden" : "visible";
    }
    prevBtn.onclick = () => {
      if (paginaActual > 0) {
        paginaActual--;
        mostrarPagina();
      }
    };
    nextBtn.onclick = () => {
      if (paginaActual < paginas.length - 1) {
        paginaActual++;
        mostrarPagina();
      }
    };

    // Prevenir arrastrar imágenes (para no romper el flow en móvil)
    document.querySelectorAll('img').forEach(img => {
      img.ondragstart = () => false;
    });
  </script>
</body>
</html>
