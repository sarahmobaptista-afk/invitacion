      height: 100vh;
      object-fit: cover;
      z-index: 0;
    }
    .centered {
      position: absolute;
      left: 50%;
      top: 50%;
      transform: translate(-50%,-50%);
      display: flex;
      flex-direction: column;
      align-items: center;
      z-index: 10;
    }
    #sobre-cerrado {
      width: 370px;
      max-width: 90vw;
      transition: opacity 0.7s;
      cursor: pointer;
      box-shadow: 0 6px 36px #0004;
      border-radius: 14px;
